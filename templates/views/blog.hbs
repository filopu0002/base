<div class="blog">
	<div class="container title">
		<h1>Le Blog</h1>
		<h3>Tous nos articles de voyage</h3>
	</div>
	<div class="container">
		<div class="row">
				<!-- <h4 class="text-weight-normal">Showing {{ data.posts.results.length}} post.</h4> -->

					{{# each data.posts.results}}
						  <div class="col-sm-6 col-md-3 mobile">


		            <div class="article">
									<a href="{{postUrl slug}}" class="image-article">
		                {{#if image}}<img class="image-ar" src="{{{cloudinaryUrl image}}}">{{/if}}
		              </a>
									<div class="title">
											<a href="{{postUrl slug}}"> <h3>{{{title}}}</h3> </a>
									</div>

		              <div class="caption">

										<div class="place-date">

											<span class="date">{{{dateArticle}}} </span>
										</div>
										<div class="content-brief">
											<a href="{{postUrl slug}}">
												{{{content.brief}}}
											</a>
										</div>
										<div class="more">
				 							<a href="{{postUrl slug}}" class="button-more"> Lire la suite <i class="fa fa-long-arrow-right"></i>
				 							</a>
				 						</div>
		              </div>
		            </div>
		          </a>

						</div>
						{{/each}}
			</div>
