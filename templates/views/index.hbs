{{!< default}}
<div id="index">
	<div class="content-fixed cover">
		<div class="content">
			<div class="container">
				<div class="row">
					<div class="col-md-8.col-md-offset-2">
						<h2>Bienvenue sur notre blog de voyage.</h2>
					</div>
				</div>
			</div>
		</div>
	</div>

	<section class="content-scrolling">
		<div class="container">
			<h3>- Nos derniers articles -</h3>
			<div class="row">
			{{# each data.posts.results}}

				{{#if @first}}
  				<div class="col-sm-12 main-article">
            <div class="image-article">
              {{#if image}}<img class="image-ar" src="{{{cloudinaryUrl image }}}">{{/if}}
            </div>
  					<div class="text-article">
							<div class="text-inter">
	              <h1>{{{title}}}</h1>
								<div class="button">
									<a href="{{postUrl slug}}" class="button-article">Lire</a>
								</div>
							</div>
  				  </div>
  				</div>

         {{else}}
         <div class="col-sm-6 col-md-4">
          <a href="{{postUrl slug}}">
            <div class="article">
              <div class="image-article">
                {{#if image}}<img class="image-ar" src="{{{cloudinaryUrl image}}}">{{/if}}
              </div>
              <div class="caption">
                <h2>{{{title}}}</h2>
                <p class="content-brief">{{{content.brief}}}</p>
								<div class="place-date">
									<span class="place">Lieu</span>
									<span class="date"> 23 juillet 2016 </span>
								</div>
               <!-- <p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}

               </p> -->
                <p></p>
              </div>
            </div>
          </a>
        </div>
        {{/if}}
      {{/each}}
			</div>
				<div class="btnArticle">
					<a href="/blog" class="btn">  DÃ©couvrez le reste de nos articles </a>
				</div>
		</div>
	</section>

	<div class="content-fixed cover2">
		<div class="content">
			<div class="container">
				<div class="row">
					<div class="col-md-8.col-md-offset-2">
						<h1>PART2</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<section class="content-scrolling cd-color-3">

	</section>
</div>
