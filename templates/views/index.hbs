{{!< default}}
<div class="index">
	<div class="content-fixed-1 cover">
		<div class="content">
			<div class="container title-top">
						<h1>Bienvenue sur notre blog</h1>
						<h2>Découvrez tous nos articles sur nos différents voyages</h2>
			</div>
		</div>
		<a class="icon" id="icon" href="#">

				<span class="arrow arrow-1"></span>
				<span class="arrow arrow-2"></span>

		</a>
	</div>

	<section class="content-scrolling" id="link">
		<div class="container">
			<span class="title-article-index"><h2> Nos derniers articles </h2></span>
			<div class="row">
			{{# each data.posts.results}}

				{{#if @first}}
  				<div class="col-sm-12 main-article">
            <div class="image-article">
              {{#if image}}<img class="image-ar" src="{{{cloudinaryUrl image }}}">{{/if}}
            </div>
  					<div class="text-article">
							<div class="text-inter">
	              <h1>{{{title}}}</h1>
								<div class="button">
									<a href="{{postUrl slug}}" class="button-article">Lire</a>
								</div>
							</div>
  				  </div>
  				</div>

         {{else}}
         <div class="col-sm-6 col-md-4">

					 <div class="article">
	 					<a href="{{postUrl slug}}" class="image-article">
	 						{{#if image}}<img class="image-ar" src="{{{cloudinaryUrl image}}}">{{/if}}
	 					</a>
	 					<div class="title">
	 							<a href="{{postUrl slug}}"> <h3>{{{title}}}</h3> </a>
	 					</div>

	 					<div class="caption">

	 						<div class="place-date">
	 							<!-- {{{categoryList categories }}} -->
	 							<span class="date"> {{{dateArticle}}} </span>
	 						</div>
	 						<div class="content-brief">
	 							<a href="{{postUrl slug}}">
	 								<span class="content"> {{{content.brief}}} </span>
	 							</a>
	 						</div>
	 						<div class="more">
	 							<a href="{{postUrl slug}}" class="button-more"> Lire la suite <i class="fa fa-long-arrow-right"></i>
	 							</a>
	 						</div>
	 					</div>
	 				</div>
        </div>
        {{/if}}
      {{/each}}
			</div>
				<div class="btnArticle">
					<a href="/blog" class="btn">  Découvrez le reste de nos articles </a>
				</div>
		</div>

	</section>
	<div class="parallax-container">
  	<div class="parallax" style="background: url(./../images/HeaderReduced.jpeg) center center / cover no-repeat;">
		</div>
	</div>
	<section class="content-scrool-fixed">
		<div class="container">
			<span class="title-article-index"><h2> Nos dernières photos </h2></span>
			<div class="row">
				 <div class="last-photos" id="instafeed">
				 </div>
			</div>
		</div>
	</section>
	{{> footer}}

</div>
